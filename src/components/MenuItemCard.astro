---
interface Props {
  name: string;
  description: string;
  price: number;
  image: string;
}

const { name, description, price, image } = Astro.props;
---

<div class="bg-gray-800 bg-opacity-75 rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
  <img class="w-full h-48 object-cover" src={image} alt={name} />
  <div class="p-6">
    <h3 class="font-bold text-xl mb-2 text-white">{name}</h3>
    <p class="text-gray-200 text-base mb-4">
      {description}
    </p>
    <div class="text-white font-bold text-xl">${price.toFixed(2)}</div>
  </div>
</div>
