---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/Hero.astro';
import MenuItemCard from '../components/MenuItemCard.astro';
import { menuCategories } from '../data/menu';

const allMenuItems = menuCategories.flatMap(category => category.items);
const featuredItems = allMenuItems.slice(0, 3);
---

<MainLayout title="The Golden Spoon - Welcome">
	<Hero />

	<section class="py-20">
		<div class="container mx-auto px-4">
			<h2 class="text-4xl font-bold text-center mb-12">Featured Dishes</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{featuredItems.map(item => (
					<MenuItemCard 
						name={item.name} 
						description={item.description} 
						price={item.price} 
						image={item.image} 
					/>
				))}
			</div>
		</div>
	</section>
</MainLayout>
