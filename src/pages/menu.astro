---
import MainLayout from '../layouts/MainLayout.astro';
import MenuItemCard from '../components/MenuItemCard.astro';
import { menuCategories } from '../data/menu';
---

<MainLayout title="Our Menu - The Golden Spoon">
  <div class="py-20 bg-gray-900">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center text-white mb-12">Our Delicious Menu</h1>

      {menuCategories.map((category) => (
        <section class="mb-16">
          <h2 class="text-3xl font-bold text-center text-white mb-8">{category.name}</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            {category.items.map((item) => (
              <MenuItemCard
                name={item.name}
                description={item.description}
                price={item.price}
                image={item.image}
              />
            ))}
          </div>
        </section>
      ))}

    </div>
  </div>
</MainLayout>
